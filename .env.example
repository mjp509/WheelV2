# Twitch Bot Configuration
# Copy this file to .env and fill in your actual values

# Bot account username
TWITCH_BOT_USERNAME=your_bot_username

# Channel to monitor (without the # prefix)
TWITCH_CHANNEL=your_channel_name

# Twitch API credentials (get from https://dev.twitch.tv/console)
TWITCH_CLIENT_ID=your_client_id
TWITCH_ACCESS_TOKEN=oauth:your_access_token
TWITCH_REFRESH_TOKEN=your_refresh_token

# The name of the channel point redemption to watch for
REDEMPTION_ID=redemption_point_id

# OBS WebSocket password (found in OBS > Tools > WebSocket Server Settings)
OBS_PASSWORD=your_obs_password
